<%= form_for @post do |f| %>
	<%= f.label :title, "Title"%>
  	<%= f.text_field :title %>
	<br />
	<%= f.label :link, "URL" %>
	<%= f.url_field :link %>
	<br />
	<div class="field">
	<%= f.label :content, "Text" %><br />
    <%= f.text_area :content %>
  	</div>
  	<div>
    <%= f.submit "Submit", :class => "btn" %>
  	</div>
<% end %>